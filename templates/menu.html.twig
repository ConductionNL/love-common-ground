{# templates/home/menu.html.twig #}

<!-- Mobile menu dropdown -->
      <div class="mobile-header-menu">
        <div class="menu-logo">
            <span class="header-icon glyphicon glyphicon-heart-empty"></span>
        </div>
        <div class="dropdown">
          <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-expanded="true">
            <span class="glyphicon glyphicon-menu-hamburger color-1"></span>
          </button>
          <ul class="dropdown-menu dropdown-menu-right" role="menu" aria-labelledby="dropdownMenu1">                       
            <li>
              	<a href="javascript:void(0);" onclick="scrollToAnchor('about')">Over {% if organisation is defined %}{{ organisation.name }}{% else %} deze site{% endif %}</a>
            </li>
            <li>
                {% if organisation is defined %}
              	<a href="common-ground.dev#organisations">Andere Organisaties</a>
              	{% else %}
              	<a href="javascript:void(0);" onclick="scrollToAnchor('organisations')">Organisaties</a>
              	{% endif %}
            </li>
            <li>
              	<a href="javascript:void(0);" onclick="scrollToAnchor('components')">Componenten</a>
            </li>
            {% if is_granted('IS_AUTHENTICATED_FULLY')  or is_granted('IS_AUTHENTICATED_REMEMBERED') %}
            <li>
              	<a href="{{ path('app_user_index') }}" >Instellingen</a>
            </li>
            <li>
              	<a href="{{ path('app_logout') }}" >Uitloggen</a>
            </li>
            {% else %}
            <li>
              	<a href="javascript:void(0);" onclick="scrollToAnchor('login')"> Inloggen / Aanmelden</a>
            </li>
            {% endif %}
          </ul>
        </div>
      </div>

      <!-- Desktop menu -->
      <div class="container fluid-container content-area header-menu">
        <div class="header-menu-content">
          <div class="menu-logo">
            <span class="header-icon glyphicon glyphicon-heart-empty"></span>
          </div>
          <ul>                    
            <li>
              	<a href="javascript:void(0);" onclick="scrollToAnchor('about')">Over {% if organisation is defined %}{{ organisation.name }}{% else %} deze site{% endif %}</a>
            </li>
            <li>
                {% if organisation is defined %}
              	<a href="common-ground.dev#organisations">Andere Organisaties</a>
              	{% else %}
              	<a href="javascript:void(0);" onclick="scrollToAnchor('organisations')">Organisaties</a>
              	{% endif %}
            </li>
            <li>
              	<a href="javascript:void(0);" onclick="scrollToAnchor('components')">Componenten</a>
            </li>
            {% if is_granted('IS_AUTHENTICATED_FULLY')  or is_granted('IS_AUTHENTICATED_REMEMBERED') %}
            <li>
              	<a href="{{ path('app_user_index') }}" >Instellingen</a>
            </li>
            <li>
              	<a href="{{ path('app_logout') }}" >Uitloggen</a>
            </li>
            {% else %}
            <li>
              	<a href="javascript:void(0);" onclick="scrollToAnchor('login')"> Inloggen / Aanmelden</a>
            </li>
            {% endif %}
          </ul>
        </div>
      </div>
